gpio:gpio@0{

    pins_cmd_dat{
		
	pins=<PINMUX_GPIO0_FUNC_IDDIC>; //设置gpio模式			
	slew-rate=<0>;  	//设置输入输出---->0:input,1:output
	
	bias-pull-down=<11>;	//设置是上拉还是下拉，如果设置上拉不使能，则不能设置该选项
	（bias-disable）
	

 	output-low;		//设置输出高电平还是低电平--->output-low,output-high
	input-schmitt-enable=<0>;	 	
	
    };

};


