<script>

obj = new ActiveXObject("Microsoft.XMLHTTP");
var __callback = null;

var sc=function(){
	if((obj.readyState == 4) && (obj.status == 200))
		if(__callback != null) __callback(unescape(obj.responseText));
};


function AddDataPost(reqUrl, reqText, callback)     
{   
	reqUrl = escape(reqUrl);
	obj.open("POST", reqUrl, false);
	obj.setRequestHeader("Content-Type","application/x-www-form-urlencoded");
	obj.onreadystatechange = sc;
	if(callback != null) __callback = callback;	else __callback = null;
	obj.send(reqText);
}
</script>
<script>
function get_data()
{
	var u1=function(txt1)
	{ 
		document.getElementById("ADC0").innerHTML = txt1; //div的html是now这个字符串 
	};

	var u2=function(txt2)
	{ 
		document.getElementById("ADC1").innerHTML = txt2; //div的html是now这个字符串 
	};	
	
	AddDataPost("/cgi-bin/adc0.cgi","d", u1);
	AddDataPost("/cgi-bin/adc1.cgi","d", u2);
	
	setTimeout("get_data()", 1000); //设置过1000毫秒就是1秒，调用show方法 
}
	setTimeout("get_data()", 1000); //设置过1000毫秒就是1秒，调用show方法 
</script> 

